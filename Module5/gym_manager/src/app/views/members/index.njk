{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

    <a href="/members/create">New Member</a>

    <table width="100%">
        <thead>
            <tr>
                <th>Member</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>
                    <span style="background-image: url('{{member.avatar_url}}')"></span>
                    {{member.name}}
                </td>
                <td>{{member.height}}cm</td>
                <td>{{member.weight}}Kg</td>
                <td>{{member.email}}</td>
                <td><a href="/members/{{member.id}}">Show</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock content %}