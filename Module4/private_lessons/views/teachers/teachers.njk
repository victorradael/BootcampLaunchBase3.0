{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock %}

{% block content %}

    <div class="card table-container">

        <a href="/teachers/create" >New Teacher</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Specialty</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url('{{teacher.avatar_url}}')"></span>
                        {{teacher.name}}
                    </td>
                    <td class="services">{{teacher.specialty}}</td>
                    <td><a href="/teachers/{{teacher.id}}">Show</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}