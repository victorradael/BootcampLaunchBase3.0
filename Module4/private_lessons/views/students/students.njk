{% extends "layout.njk" %}

{% block head %}
    <title>Students</title>
{% endblock %}

{% block content %}

     <div class="card table-container">

        <a href="/students/create" >New Student</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Email</th>
                    <th>Grade</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>
                        <span style="background-image: url('{{student.avatar_url}}')"></span>
                        {{student.name}}
                    </td>
                    <td class="specialty">{{student.email}}</td>
                    <td class="specialty">{{student.grade}}</td>
                    <td><a href="/students/{{student.id}}">Show</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}